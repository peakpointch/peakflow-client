{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@peakflow/*": [
        "../peakflow/src/*", // local override (when using `file:../peakflow`)
        "node_modules/peakflow/src/*" // fallback for GitHub/NPM version
      ],
      "html2pdf.js": [
        "node_modules/html2pdf.js/dist/html2pdf.bundle.min.js"
      ]
    },
    "target": "ES2015",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "esModuleInterop": true,
    "declaration": true,
    "noEmit": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true
  }
}
